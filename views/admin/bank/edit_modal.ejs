<!-- Modal -->
<div class="modal fade" id="edit-modal" tabindex="-1" aria-labelledby="add-modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="add-modalLabel">Update Bank</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="POST" action="/admin/bank?_method=PUT" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="nameBank">Bank Name</label>
                        <input type="text" class="form-control nameBank" id="nameBank" name="nameBank"
                            placeholder="Type your bank name here ..." required>
                    </div>
                    <div class="form-group">
                        <label for="nomorRekening">Nomor Rekening</label>
                        <input type="text" class="form-control nomorRekening" id="nomorRekening" name="nomorRekening"
                            placeholder="Type your nomor rekening here ..." required>
                    </div>
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control name" id="name" name="name"
                            placeholder="Type your name here ..." required>
                    </div>
                    <div class="form-group">
                        <label for="image">Image</label>
                        <input type="file" class="form-control" id="image" name="image">
                        <span>Pilih Gambar Untuk Update Image</span>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="hidden" class="id" name="id">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>