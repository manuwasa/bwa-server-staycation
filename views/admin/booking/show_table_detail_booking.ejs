<!-- DataTales Example -->
<div class="card shadow mb-4 mt-2">
    <div class="card-header py-3">
        <a href="/admin/booking" class="btn btn-warning">Back</a>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <img src="https://admin-staycation.herokuapp.com/<%= booking.payments.proofPayment %>"
                    alt="<%= booking.payments.proofPayment %>" style="width: 100% ; display: block;">
            </div>
            <div class="col-md-8">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTableActivity" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Nama Member</th>
                                <th>Total</th>
                                <th>Bank</th>
                                <th>Title</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <%= booking.memberId.firstName %>
                                        <%= booking.memberId.lastName %>
                                </td>
                                <td>
                                    $<%= booking.total %>
                                </td>
                                <td>
                                    <%= booking.payments.bankFrom %>
                                </td>
                                <td>
                                    <%= booking.itemId.title %>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="row ml-1">

                    <% if(booking.payments.status==="Proses" ) { %>

                        <form action="/admin/booking/<%= booking._id %>/confirmation?_method=PUT" method="POST">
                            <button type="submit" href="" class="btn btn-success btn-sm mr-2"><i
                                    class="fas fa-check mr-2"></i>Confirm</button>
                        </form>
                        <form action="/admin/booking/<%= booking._id %>/reject?_method=PUT" method="POST">
                            <button type="submit" href="" class="btn btn-danger btn-sm"><i
                                    class="fas fa-times mr-2"></i>Reject</button>
                        </form>

                        <% } %>
                </div>
            </div>
        </div>
    </div>
</div>